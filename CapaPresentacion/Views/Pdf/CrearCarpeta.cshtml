@model CapaPresentacion.Models.CarpetaDocumentacion

@{
    ViewBag.Title = "Crear Carpeta";
}

<style>
    .crear-carpeta-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

        .crear-carpeta-container h2 {
            color: #303234;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-control {
        border-radius: 10px;
    }

    .btn-success-custom {
        background-color: #03A64A;
        color: #fff;
        border: none;
        padding: 10px 25px;
        border-radius: 12px;
        font-weight: 500;
    }

        .btn-success-custom:hover {
            background-color: #02903e;
        }
</style>

<div class="crear-carpeta-container">
    <h2>📂 Crear Carpeta</h2>

    @using (Html.BeginForm())
    {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ej. Informes Legales" })
        </div>

        <button class="btn btn-success-custom mt-2">Crear Carpeta</button>
    }
</div>
