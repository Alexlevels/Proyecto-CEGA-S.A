@model IEnumerable<CapaPresentacion.Models.Empleado>

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Gestión de Empleados</h2>
        <a href="@Url.Action("Create")" class="btn btn-success shadow-sm px-4 py-2">
            <i class="fa fa-plus"></i> Agregar Empleado
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay empleados registrados aún.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre completo</th>
                        <th>Correo electrónico</th>
                        <th>Puesto actual</th>
                        <th>Salario actual</th>
                        <th>Fecha de Contratación</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td><a href="mailto:@item.Correo">@item.Correo</a></td>
                            <td>@item.Puesto</td>
                            <td>@item.Salario.ToString("C")</td>
                            <td>@item.FechaContratacion.ToShortDateString()</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning me-1">
                                    <i class="fa fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info text-white me-1">
                                    <i class="fa fa-eye"></i> Detalles
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .btn-success {
        background-color: #03A64A;
        border-color: #03A64A;
    }

        .btn-success:hover {
            background-color: #5ABF86;
            border-color: #5ABF86;
        }

    .btn-info {
        background-color: #03A63C;
        border-color: #03A63C;
    }

        .btn-info:hover {
            background-color: #91D980;
            border-color: #91D980;
        }

    .table > tbody > tr > td {
        vertical-align: middle;
    }
</style>
