@using CapaPresentacion.Models
@model IEnumerable<CapaPresentacion.Models.CampanaMarketing>

<style>
    h2 {
        margin-bottom: 25px;
        font-weight: bold;
        color: #303234;
        text-align: center;
    }

    .card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        max-width: 1100px;
        margin: auto;
    }

    .btn-primary {
        background-color: #03A64A;
        border-color: #03A64A;
        color: #fff;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #03A63C;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 25px;
    }

        .table thead {
            background-color: #303234;
            color: #fff;
        }

        .table th, .table td {
            padding: 12px 16px;
            border-bottom: 1px solid #e0e0e0;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #f9f9f9;
        }
</style>

<div class="card">
    <h2>Campañas de Marketing</h2>

    <div class="text-end mb-3">
        @Html.ActionLink("Crear nueva campaña", "Crear", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Nombre</td>
                    <td>@c.Descripcion</td>
                    <td>@c.FechaInicio.ToShortDateString()</td>
                    <td>@c.FechaFin.ToShortDateString()</td>
                    <td>@c.Estado</td>
                </tr>
            }
        </tbody>
    </table>
</div>
