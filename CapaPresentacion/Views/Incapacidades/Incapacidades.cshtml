@model CapaPresentacion.Models.Incapacidad

<style>
    .form-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
    }

    h2 {
        text-align: center;
        color: #303234;
        font-weight: bold;
        margin-bottom: 25px;
    }

    label {
        font-weight: 500;
        color: #303234;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #03A64A;
        border-color: #03A64A;
        color: #fff;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #03A63C;
        }
</style>

<div class="form-container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h2>Solicitar Incapacidad</h2>

        <div class="form-group">
            @Html.Label("Fecha")
            @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ArchivoComprobante)
            <input type="file" name="archivo" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    }
</div>
