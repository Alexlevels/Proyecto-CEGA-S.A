@using CapaPresentacion.Models
@model CapaPresentacion.Models.CampanaMarketing

<style>
    h2 {
        margin-bottom: 25px;
        font-weight: bold;
        color: #303234;
    }

    .form-card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        color: #303234;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"],
    textarea,
    input[type="date"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    .btn-success {
        background-color: #03A64A;
        border-color: #03A64A;
        color: #fff;
        font-weight: 500;
        padding: 10px 18px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #03A63C;
        }
</style>

<div class="form-card">
    <h2>Crear Campaña</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion)
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaInicio)
            @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaFin)
            @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado)
            @Html.TextBoxFor(m => m.Estado, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">Guardar</button>
    }
</div>
