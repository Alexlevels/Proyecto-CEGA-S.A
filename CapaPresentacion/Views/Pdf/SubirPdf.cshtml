@model int?

@{
    ViewBag.Title = "Subir PDF";
}

<style>
    .form-container {
        background-color: #fff;
        padding: 30px;
        max-width: 500px;
        margin: auto;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            color: #303234;
            font-weight: 600;
            margin-bottom: 20px;
        }

    .form-group label {
        font-weight: 500;
        color: #303234;
    }

    .btn-success-custom {
        background-color: #03A64A;
        border: none;
        color: white;
    }

        .btn-success-custom:hover {
            background-color: #02903e;
        }
</style>

<div class="form-container">
    <h2>📄 Subir documento PDF</h2>

    @using (Html.BeginForm("SubirPdf", "Pdf", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Hidden("carpetaId", Model)

        <div class="form-group mb-3">
            <label>Seleccione archivo PDF</label>
            <input type="file" name="file" class="form-control" accept="application/pdf" required />
        </div>

        <button type="submit" class="btn btn-success-custom mt-2">Subir PDF</button>
    }
</div>
