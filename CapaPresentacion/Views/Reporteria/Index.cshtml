@{
    ViewBag.Title = "Reportería";
}

<style>
    .tab-pane h4 {
        color: #303234;
        font-weight: 600;
    }

    .btn-exportar {
        background-color: #03A64A;
        border: none;
        color: white;
    }

        .btn-exportar:hover {
            background-color: #028a3c;
        }

    .table {
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .nav-tabs .nav-link.active {
        background-color: #03A64A;
        color: #fff !important;
        border: none;
        border-radius: 10px 10px 0 0;
    }

    .nav-tabs .nav-link {
        color: #303234;
        font-weight: 500;
    }

    .tab-content {
        background: #fff;
        border-radius: 0 0 10px 10px;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-top: none;
    }

    .table-bordered th, .table-bordered td {
        vertical-align: middle;
    }
</style>

<h2 class="mt-3 mb-4">📋 Reportes Generales</h2>

<ul class="nav nav-tabs" id="reportTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="vacaciones-tab" data-bs-toggle="tab" data-bs-target="#vacaciones" type="button" role="tab">Vacaciones</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="incapacidades-tab" data-bs-toggle="tab" data-bs-target="#incapacidades" type="button" role="tab">Incapacidades</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="incidentes-tab" data-bs-toggle="tab" data-bs-target="#incidentes" type="button" role="tab">Incidentes</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="usuarios-tab" data-bs-toggle="tab" data-bs-target="#usuarios" type="button" role="tab">Usuarios</button>
    </li>
</ul>

<div class="tab-content" id="reportTabContent">
    <!-- Vacaciones -->
    <div class="tab-pane fade show active" id="vacaciones" role="tabpanel">
        <h4 class="mt-3">🗓️ Vacaciones</h4>
        <button class="btn btn-exportar mb-3" disabled>📄 Exportar a PDF</button>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Empleado</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Alex</td>
                    <td>2025-02-14</td>
                    <td>2025-02-20</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Incapacidades -->
    <div class="tab-pane fade" id="incapacidades" role="tabpanel">
        <h4 class="mt-3">🤒 Incapacidades</h4>
        <button class="btn btn-exportar mb-3" disabled>📄 Exportar a PDF</button>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Empleado</th>
                    <th>Fecha</th>
                    <th>Comprobante</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Alex</td>
                    <td>2025-03-22</td>
                    <td>Entregado</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Incidentes -->
    <div class="tab-pane fade" id="incidentes" role="tabpanel">
        <h4 class="mt-3">⚠️ Incidentes</h4>
        <button class="btn btn-exportar mb-3" disabled>📄 Exportar a PDF</button>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Fecha</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2025-01-05</td>
                    <td>Falla en el proyecto ICE</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Usuarios -->
    <div class="tab-pane fade" id="usuarios" role="tabpanel">
        <h4 class="mt-3">👤 Usuarios</h4>
        <button class="btn btn-exportar mb-3" disabled>📄 Exportar a PDF</button>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Agregado</td>
                    <td>alex@cega.com</td>
                    <td>2024-11-11</td>
                </tr>
                <tr>
                    <td>Modificado</td>
                    <td>alex@cega.go.cr</td>
                    <td>2025-01-20</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
