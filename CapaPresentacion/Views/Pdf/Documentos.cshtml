@model IEnumerable<CapaPresentacion.Models.DocumentoPdf>

@{
    ViewBag.Title = "Documentos";
}

<style>
    .documentos-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 16px;
        max-width: 900px;
        margin: auto;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
    }

    h2 {
        color: #303234;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .btn-success-custom {
        background-color: #03A64A;
        border: none;
        color: white;
    }

        .btn-success-custom:hover {
            background-color: #02903e;
        }

    .btn-outline-primary, .btn-outline-info {
        border-radius: 8px;
    }

    .table th {
        background-color: #f8f9fa;
        color: #303234;
    }

    .table td {
        vertical-align: middle;
    }
</style>

<div class="documentos-container">
    <h2>📁 Documentos de la Carpeta</h2>

    <a href="@Url.Action("SubirPdf", new { carpetaId = ViewBag.CarpetaId })" class="btn btn-success-custom mb-3">
        + Subir PDF
    </a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Nombre</td>
                    <td class="text-center">
                        <a href="@Url.Action("Descargar", new { id = doc.Id })" class="btn btn-sm btn-outline-primary me-2">📥 Descargar</a>
                        <a href="@Url.Action("Comentarios", new { documentoId = doc.Id })" class="btn btn-sm btn-outline-info">💬 Comentarios</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
