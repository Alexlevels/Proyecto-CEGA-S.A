@model IEnumerable<CapaPresentacion.Models.ComentarioProyecto>

@{
    ViewBag.Title = "Comentarios del Proyecto";
    int proyectoId = ViewBag.ProyectoId != null ? (int)ViewBag.ProyectoId : 0;
}

<h2 class="mb-4">Comentarios del Proyecto</h2>

<a href="@Url.Action("Crear", new { proyectoId = proyectoId })" class="btn btn-success mb-3">+ Agregar Comentario</a>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Texto</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comentario in Model)
            {
                <tr>
                    <td>@comentario.Texto</td>
                    <td>@comentario.Fecha.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("Eliminar", new { id = comentario.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No hay comentarios registrados para este proyecto.</p>
}

<a href="@Url.Action("Index", "Proyecto")" class="btn btn-secondary mt-3">Volver a proyectos</a>
