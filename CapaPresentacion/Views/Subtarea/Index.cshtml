@model IEnumerable<CapaPresentacion.Models.Subtarea>

@{
    ViewBag.Title = "Subtareas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int tareaId = ViewBag.TareaId != null ? (int)ViewBag.TareaId : 0;
    int proyectoId = ViewBag.ProyectoId != null ? (int)ViewBag.ProyectoId : 0;
}

<h2 class="mb-4">Subtareas</h2>

<a href="@Url.Action("Crear", new { tareaId = tareaId })" class="btn btn-success mb-3">+ Agregar Subtarea</a>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subtarea in Model)
            {
                <tr>
                    <td>@subtarea.Descripcion</td>
                    <td>@subtarea.Estado</td>
                    <td>
                        <a href="@Url.Action("Editar", new { id = subtarea.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Eliminar", new { id = subtarea.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No hay subtareas registradas para esta tarea.</p>
}

<a href="@Url.Action("Index", "Tarea", new { proyectoId = proyectoId })" class="btn btn-secondary mt-3">Volver a tareas</a>
