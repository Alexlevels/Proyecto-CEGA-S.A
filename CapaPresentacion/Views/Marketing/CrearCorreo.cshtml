@model CapaPresentacion.Models.CorreoMarketing

<style>
    h2 {
        margin-bottom: 25px;
        font-weight: bold;
        color: #303234;
        text-align: center;
    }

    .form-card {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        max-width: 600px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #303234;
        margin-bottom: 6px;
        display: block;
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 14px;
    }

    .field-validation-error {
        color: red;
        font-size: 13px;
    }

    .btn-success {
        background-color: #03A64A;
        border-color: #03A64A;
        color: #fff;
        font-weight: 500;
        padding: 10px 18px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #03A63C;
        }
</style>

<div class="form-card">
    <h2>Agregar Correo</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Correo)
            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", type = "email" })
            @Html.ValidationMessageFor(m => m.Correo)
        </div>

        <div class="form-group">
            <label>@Html.CheckBoxFor(m => m.Verificado) @Html.DisplayNameFor(m => m.Verificado)</label>
        </div>

        <button type="submit" class="btn btn-success">Guardar</button>
    }
</div>
