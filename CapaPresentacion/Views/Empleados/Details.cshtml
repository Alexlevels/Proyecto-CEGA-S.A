@model CapaPresentacion.Models.Empleado

@{
    ViewBag.Title = "Detalles del Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-4 p-4 shadow-sm">
    <h2 class="mb-4">Detalles del Empleado</h2>

    <dl class="row">
        <dt class="col-sm-3">Nombre:</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Correo:</dt>
        <dd class="col-sm-9">@Model.Correo</dd>

        <dt class="col-sm-3">Puesto:</dt>
        <dd class="col-sm-9">@Model.Puesto</dd>

        <dt class="col-sm-3">Salario:</dt>
        <dd class="col-sm-9">@Model.Salario.ToString("C")</dd>

        <dt class="col-sm-3">Fecha de Contratación:</dt>
        <dd class="col-sm-9">@Model.FechaContratacion.ToShortDateString()</dd>
    </dl>

    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn" style="background-color: #5ABF86; color: white;">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Volver</a>
</div>
