@model CapaPresentacion.Models.Subtarea
@{
    ViewBag.Title = "Editar Subtarea";
}

<h2>Editar Subtarea</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.TareaId)

    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Estado)
        @Html.TextBoxFor(m => m.Estado, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Actualizar</button>
}
